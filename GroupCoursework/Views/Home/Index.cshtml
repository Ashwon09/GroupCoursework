@{
    ViewData["Title"] = "Home Page";
}

<style>
        .carousel-text {
            position: absolute;
            bottom: 50%;
            left: 67%;
            z-index: 20;
            color: white;
            text-shadow: 0 1px 2px rgba(0, 0, 0, .6);
        }
        body{
            overflow-x: hidden;
        }
    </style>

<div class="wrapper">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-interval="3000" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/homepage1.png" alt="First slide">
                    <div class="carousel-text">
                        <h2>Hollywood to Bollywood, Movies and Series, You Name it, You Can Rent it!</h2>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/homepage2.png" alt="Second slide">
                    <div class="carousel-text">
                        <h2>Grab Some Popcorn, Sit Back and Relax and Enjoy the Old Fashioned Way!</h2>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/homepage3.png" alt="Third slide">
                    <div class="carousel-text">
                        <h2>Enjoy Together With Your Loved Ones!</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
