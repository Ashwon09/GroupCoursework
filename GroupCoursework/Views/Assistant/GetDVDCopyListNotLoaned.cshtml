@{
    ViewData["Title"] = "GetDVDCopyListNotLoaned";
}

<style>
    body {
        background-image: url("../images/17.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover
    }
</style>
<body>
    <div class="container">
        <h1 style="color: white; text-align:center;">A list of all DVD copies currently on loan with total loans</h1>
        <div class="card" style="opacity:80%;">
            <table class="table">
                <thead>
                    <tr>

                        <th>DVDTitleName</th>
                        <th>CopyNumber</th>
                        <th>MembershipFirstName</th>
                        <th>DateOut</th>
                        <th>TotalLoans</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.totalloans)
                    {
                        <tr>
                            <td>@item.DvdTitle </td>
                            <td>@item.CopyNumber </td>
                            <td>@item.MembershipFirstName </td>
                            <td>@item.DateOut </td>
                            <td>@item.TotalLoans </td>
                            <td>
                                @*   <ul class="list-inline m-0">
                                    <li class="list-inline-item">
                                    <a href="@Url.Action("DeleteCopy","Assistant",new { item.dvdCopy.CopyNumber} )" class="btn btn-danger" type="button" data-toggle="tooltip" data-placement="top" title="Delete">Delete</a>
                                    </li>
                                    </ul>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>


