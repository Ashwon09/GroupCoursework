@{
    ViewData["Title"] = "AddDVDCopy";
}
<style>
body{
background-image:url("../images/6.jpg");
background-repeat:no-repeat;
background-size:cover;
}
th{
    color:white;
}
</style>
<body>
    <h1 class="text-center" style="font-weight:800; color:white;">Add DVD Copy</h1>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
Your Price is @ViewBag.Price
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
    <div class="container">
        <form action="/Assistant/AddDVDCopy" method="post">
            <div class="form-group">
                 <label style="font-weight:800; color:white; font-size: 25px;"> Producer</label>
                 <br/> 
                 <select id="member" name="member" class="form-control" required>
                        <option value="">Select a Member</option>
                        @foreach (var name in ViewBag.member)
                        {
                            <option value="@name.MembershipNumber">  @name.MembershipFirstName @name.MembershipLastName</option>
                        }
                    </select>
            </div>
            <div class="form-group mt-3">
                <label style="font-weight:800; color:white; font-size: 25px;"> Category</label>
                <br />
                 <select id="loantype" name="loantype" class="form-control custom-select bg-white border-left-0 border-md" required>
                        <option value="">Select a Category</option>
                        @foreach (var name in ViewBag.loanType)
                        {
                            <option value="@name.LoanTypeNumber">@name.Loan_Type</option>
                        }
                    </select>
            </div>
<div class="form-group mt-3">
                <label style="font-weight:800; color:white; font-size: 25px;"> DVD</label>
                <br />
                 <select id="copynumber" name="copynumber" class="form-control custom-select bg-white border-left-0 border-md" required>
                        <option value="">Select a copyNumber</option>
                        @foreach (var name in ViewBag.dvd)
                        {
                            <option value="@name.dvdcopy.CopyNumber">@name.dvdtitle.DvdTitle</option>
                        }
                    </select>
            </div>
            <div class="form-group mt-3 text-center">
                <Button type="submit" class="btn form-control" style="background-color: #F2D8B3; font-weight:700; font-size: 20px; border-radius:50px; height:60px; width:200px; border:#F2D8B3; color: #CD8F64;">Submit</Button>
            </div>
        </form>
    </div>
</body>