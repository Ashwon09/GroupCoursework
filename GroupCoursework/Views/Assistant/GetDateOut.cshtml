@{
    ViewData["Title"] = "GetDateOut";
}
}
<style>
    body {
        background-image: url("../images/03.png");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover
    }
</style>
<body>
    <div class="container">
        <h1 style="color: white; text-align:center;">Details of DVD's copy</h1>


        <div class="container">
            <form action="@Url.Action("GetDateOut", "Assistant")" method="get">
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="ActorSurName" class="control-label"></label>
                            <select id="memberNumber" name="memberNumber" class="form-control custom-select bg-white border-left-0 border-md" required>
                                <option value="">Select a member id</option>
                                @foreach (var member in ViewBag.memberNumbers)
                                {
                                    <option value="@member.MembershipNumber"> @member.MembershipNumber - @member.MembershipFirstName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group row">
                            <div class="col-sm-10 mt-4">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>


<div class="card" style="opacity:80%;">
        <table class="table">
            <thead>
                <tr>
                    <th>DVD Title Name</th>
                    <th>Copy Number</th>
                    <th>Date Out</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.date)
                {
                    <tr>
                        <td>@item.dvdTitle.DvdTitle</td>
                        <td>@item.dvdCopy.CopyNumber</td>
                        <td>@item.loan.DateOut</td>

                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</body>
