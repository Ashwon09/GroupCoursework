@model GroupCoursework.Models.Studio

@{
    ViewData["Title"] = "Create";
}
<style>
body{
background-image:url("../images/17.jpg");
background-repeat:no-repeat;
background-size:cover;
}
</style>
<body>

<h1 class="text-center" style="font-weight:850; color:white;">Create</h1>

<h4 class="text-center" style="font-weight:800; color:white;">Studio</h4>
<hr style="color:white;"/>
<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudioName" class="control-label" style="color:white; font-weight:500;">Studio Name</label>
                <input asp-for="StudioName" class="form-control" />
                <span asp-validation-for="StudioName" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn" style="background-color: #F2D8B3; font-weight:700; font-size: 20px; border-radius:50px; height:60px; width:200px; border:#F2D8B3; color: #CD8F64;"/>
            </div>
        </form>
</div>

<div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}